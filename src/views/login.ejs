<%- include('includes/header'); %>
<%- include('includes/nav'); %>
<div class="container">
    <div class="row">
        <div class="col-log-2"></div>
        <div class="col-log-8 my-3">
            <h1 class="text-center">Criar conta ou Entrar</h1>
            <p class="text-center lead">Faça login ou crie a sua conta abaixo</p>
            
            <%- include('includes/messages'); %>

            <div class="row">
                <div class="col-lg-6">
                    <h4>Faça o seu cadastro</h4>
                    <p>Se você ainda não tem uma conta, faça o registo abaixo:</p>
                    <form class="form-registo" action="/login/register" method="post">
                        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                        <div class="mb-3">
                          <label for="email" class="form-label">E-mail</label>
                          <input type="email" class="form-control" id="email" name="email">
                        </div>
                        <div class="mb-3">
                          <label for="password" class="form-label">Password</label>
                          <input type="password" class="form-control" id="password" name="password">
                        </div>
                        <button type="submit" class="btn btn-primary">Criar conta</button>
                    </form>
                </div>
                <div class="col-lg-6">
                    <h4>Faça o seu login</h4>
                    <p>Se você já tem uma conta, faça login abaixo:</p>
                    <form class="form-login" action="/login/login" method="post">
                        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                        <div class="mb-3">
                          <label for="email" class="form-label">E-mail</label>
                          <input type="email" class="form-control" id="email" name="email">
                        </div>
                        <div class="mb-3">
                          <label for="password" class="form-label">Password</label>
                          <input type="password" class="form-control" id="password" name="password">
                        </div>
                        <button type="submit" class="btn btn-primary">Entrar</button>
                    </form>
                </div>
            </div>
           
        </div>
        <div class="col-log-2"></div>
    </div>
</div>
<%- include('includes/footer'); %>
